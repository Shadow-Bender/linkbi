generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prestataire {
  id          Int      @id @default(autoincrement())
  nom         String
  domaine     String
  ville       String
  description String?
  note        Float?   @default(0)
  prix        String?
  telephone   String?
  email       String?
  photos      String[] // URLs des photos
  siteWeb     String?
  linkedin    String?
  twitter     String?
  instagram   String?
  facebook    String?
  statut      String   @default("en_attente") // en_attente, valide, rejete
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([statut])
  @@index([domaine])
  @@index([ville])
  @@index([note])
  @@index([createdAt])
  @@map("prestataires")
}
